import random


variable1 = 'America(USA)'
variable2 = 'Bundesrepublik Deutschland (Germany)'
variable3 = 'Российская Федерация(The Russian Federation/USSR)'
variable4 = 'Britannia(UK)'
variable5 = '中華人民共和國 (The Peoples Republic of China/PRC)'
variable6 = '日本の現状 (The State of Japan)'
variable7 = 'Francia (The Fifth French Republic/Franchie)'
variable8 = 'Sverige(The Kingdom of Sweden)'

variable_list = [variable1, variable2, variable3, variable4, variable5, variable6, variable7, variable8]


random_variable = random.choice(variable_list)


print("1)Nation:", random_variable)


